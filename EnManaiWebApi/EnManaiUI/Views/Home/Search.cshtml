@*@using Microsoft.Extensions.Configuration;*@
@inject IConfiguration config;
@{
    ViewData["Title"] = "Search";

    var api = config.GetValue<string>("API");
    //Layout = "~/Views/Shared/_LoginLayout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container searchPageBorderPadding">
    <div class="input-group">
        <input list="datalistOptions" class="form-control border-end-0 border rounded-pill" type="search" id="search-input">
        <datalist id="datalistOptions">
            <option value="Coimbatore" />
            <option value="Palani" />
            <option value="Udumelpet" />
            <option value="Theni" />
        </datalist>
        <span class="input-group-append">
            @*onclick="SearchByCity()*@
            <button id="btnSearch" onclick="SearchByCity()" class="btn btn-primary bg-blue border-bottom-0 border rounded-pill ms-n5" type="button">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
</div>

@section scripts{
    <script src="~/js/search/search.js"></script>
    <script src="~/js/search/searchresult.js"></script>
    <script type="text/javascript">
        var APIUrl = '@api';
        $(document).ready(function () {
            usr = GetLocalData("user");
            if (!isNull(usr)) {
                usr = JSON.parse(usr);
                userType = 'Logged';
                login = usr.logins[0];
                window.location.href = 'https://localhost:7059/Home/LoggedSearch';
            }
        });
    </script>
}

